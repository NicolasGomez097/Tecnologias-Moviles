<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        style="@style/textoCentradoM"/>

    <EditText
        android:id="@+id/nombrePerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingreseNombre"
        style="@style/inputText"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apellido"
        style="@style/textoCentradoM"/>

    <EditText
        android:id="@+id/apellidoPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingreseApllido"
        style="@style/inputText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/correo"
        style="@style/textoCentradoM"/>

    <EditText
        android:id="@+id/nuevoCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/ingreseCorreo"
        style="@style/inputText"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnModificarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guardar"
        style="@style/BotonAgregar"
        android:layout_marginBottom="@dimen/marginM"/>
</LinearLayout>