<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/UtlimaActualizacion"
                android:textSize="@dimen/textL"
                android:textAlignment="textEnd"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_actualizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SinDatos"
                android:textSize="@dimen/textL"
                android:textAlignment="textStart"
                android:layout_weight="1"/>
        </LinearLayout>



        <TextView
            android:id="@+id/txt_ciudad"
            style="@style/textoCentradoM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SinUbicacion"
            android:textSize="@dimen/textM" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="@dimen/marginM">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.6">

                <TextView
                    android:id="@+id/txt_temperatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/marginL"
                    android:text="@string/SinDatos"
                    android:textSize="@dimen/textH" />

                <TextView
                    android:id="@+id/txt_condicion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/logoL"
                    android:text="@string/SinDatos"
                    android:textSize="@dimen/textM" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_clima"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imageH"
                android:layout_weight="0.4"/>

        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            style="@style/separador"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginM"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginL"
                android:text="Detalles"
                android:textSize="@dimen/textM" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/marginL"
                        android:text="Viento"
                        android:textSize="@dimen/textM" />

                    <TextView
                        android:id="@+id/txt_viento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/marginL"
                        android:text="@string/SinDatos"
                        android:textSize="@dimen/textM" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/marginL"
                        android:text="Humedad"
                        android:textSize="@dimen/textM" />

                    <TextView
                        android:id="@+id/txt_humedad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/marginL"
                        android:text="@string/SinDatos"
                        android:textSize="@dimen/textM" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                style="@style/separador"
                android:layout_marginTop="@dimen/marginM"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginM"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/marginL"
                    android:text="Descripcion"
                    android:textAlignment="center"
                    android:textSize="@dimen/textM" />

                <TextView
                    android:id="@+id/txt_descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/marginL"
                    android:text="@string/SinDatos"
                    android:textSize="@dimen/textM" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>